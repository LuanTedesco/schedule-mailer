<div class="navbar-custom nav-bar-shadow">
  <div class="topbar bg-light">
    <div class="d-flex align-items-center gap-lg-2 gap-1 justify-content-between w-100">
      <div class="d-flex align-items-center flex-row w-100">
        <div class="logo-topbar">
          <%= link_to root_path, class: "logo" do %>
            <span class="logo-lg">
              <%= image_tag 'favicon.png', alt: 'logo', id: 'theme-logo', style: 'width: 40px; height: auto;' %>
            </span>
          <% end %>
        </div>
        <div class="topnav">
          <nav class="navbar navbar-expand-lg">
            <div class="collapse navbar-collapse" id="topnav-menu-content">
              <ul class="navbar-nav gap-3">
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle arrow-none p-0 py-2" id="topnav-menu" role="button" aria-haspopup="true" aria-expanded="false">
                    <i class="uil-apps p-1"></i><%= t('topbar.menu') %>
                    <div class="arrow-down"></div>
                  </a>
                  <div class="dropdown-menu dropdown-menu-animated" aria-labelledby="topnav-menu">
                    <%= link_to boards_path, class: "dropdown-item", data: { turbo: false } do %>
                      <i class="uil-grid me-2"></i><span><%= t('topbar.boards') %></span>
                    <% end %>
                    <div class="dropdown">
                      <a class="dropdown-item dropdown-toggle arrow-none" id="topnav-departaments" role="button" aria-haspopup="true" aria-expanded="false">
                        <i class="ri-building-2-line me-2"></i><span><%= t('topbar.departaments') %></span>
                        <div class="arrow-down"></div>
                      </a>
                      <div class="dropdown-menu dropdown-menu-animated" aria-labelledby="topnav-departaments">
                        <% @departaments = current_user.departaments.actives %>
                        <% @departaments.each do |departament| %>
                          <%= link_to kanban_departaments_path(departament.id), class: "dropdown-item", data: { turbo: false } do %>
                            <span><%= departament.name.titleize %></span>
                          <% end %>
                        <% end %>
                      </div>
                    </div>
                    <%= link_to tags_path, class: "dropdown-item", data: { turbo: false } do %>
                      <i class="uil-tag me-2"></i><span><%= t('topbar.tags') %></span>
                    <% end %>
                  </div>
                </li>
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle arrow-none p-0 py-2" id="topnav-menu" role="button" aria-haspopup="true" aria-expanded="false">
                    <i class="ri-file-chart-fill p-1"></i><%= t('topbar.reports') %>
                    <div class="arrow-down"></div>
                  </a>
                  <div class="dropdown-menu dropdown-menu-animated" aria-labelledby="topnav-menu">
                    <%= link_to tasks_path, class: "dropdown-item", data: { turbo: false } do %>
                      <i class="ri-task-line me-2"></i><span><%= t('topbar.tasks') %></span>
                    <% end %>
                  </div>
                </li>
                <% if can_view_replicator_tasks? %>
                  <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle arrow-none p-0 py-2" id="topnav-menu" role="button" aria-haspopup="true" aria-expanded="false">
                      <i class="ri-guide-line p-1"></i><%= t('topbar.automations') %>
                      <div class="arrow-down"></div>
                    </a>
                    <div class="dropdown-menu dropdown-menu-animated" aria-labelledby="topnav-menu">
                      <%= link_to replicator_tasks_path, class: "dropdown-item", data: { turbo: false } do %>
                        <i class="ri-guide-line me-2"></i><span><%= t('topbar.replicatortasks') %></span>
                      <% end %>
                    </div>
                  </li>
                <% end %>
                <% if can_view_configurations? %>
                  <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle arrow-none p-0 py-2" id="topnav-menu" role="button" aria-haspopup="true" aria-expanded="false">
                      <i class="uil-cog p-1"></i><%= t('topbar.settings') %>
                      <div class="arrow-down"></div>
                    </a>
                    <div class="dropdown-menu dropdown-menu-animated" aria-labelledby="topnav-menu">
                      <%= link_to departaments_path, class: "dropdown-item", data: { turbo: false } do %>
                        <i class="ri-building-2-line me-2"></i><span><%= t('topbar.departaments') %></span>
                      <% end %>
                      <%= link_to companies_path, class: "dropdown-item", data: { turbo: false } do %>
                        <i class="ri-building-line me-2"></i><span><%= t('topbar.companies') %></span>
                      <% end %>
                      <%= link_to users_path, class: "dropdown-item", data: { turbo: false } do %>
                        <i class="ri-user-line me-2"></i><span><%= t('topbar.users') %></span>
                      <% end %>
                    </div>
                  </li>
                <% end %>
              </ul>
            </div>
          </nav>
        </div>
      </div>
      <div>
        <ul class="topbar-menu d-flex align-items-center gap-3">
          <li class="dropdown notification-list">
            <a class="nav-link dropdown-toggle arrow-none d-flex align-items-center" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="false" aria-expanded="false">
              <i class="ri-notification-3-line font-22"></i>
              <% if current_user.notifications.where(readed_at: nil).count > 0 %>
                <span class="noti-icon-badge"></span>
              <% end %>
            </a>
            <div class="dropdown-menu dropdown-menu-end dropdown-menu-animated dropdown-lg py-0">
              <div class="p-2 border-top-0 border-start-0 border-end-0 border-dashed border">
                <div class="row align-items-center">
                  <div class="col">
                    <h6 class="m-0 font-16 fw-semibold"><%= t('topbar.notifications') %></h6>
                  </div>
                </div>
              </div>
              <% current_user.notifications.where(readed_at: nil).limit(5).order(created_at: :desc).each do |notification| %>
                <div class="px-2" style="max-height: 300px;" data-simplebar>
                  <a href="<%= notification.link %>" class="dropdown-item p-0 notify-item card m-0 mt-2 unread-noti shadow-none">
                    <div class="card-body">
                      <div class="d-flex align-items-center">
                        <div class="flex-grow-1 text-truncate ms-2">
                          <h5 class="noti-item-title fw-semibold font-14"><%= notification.title %>
                            <small class="fw-normal text-muted ms-1"><%= notification.created_at.strftime('%B %d, %Y') %></small>
                          </h5>
                          <small class="noti-item-subtitle text-muted"><%= notification.content %></small>
                        </div>
                      </div>
                    </div>
                  </a>
                </div>
              <% end %>
              <a href="<%= notifications_path %>" class="dropdown-item text-center notify-item border-top py-2 mt-2">
                <%= t('topbar.show_all') %>
              </a>
            </div>
          </li>
          <li class="d-none d-sm-inline-block">
            <div class="nav-link" id="light-dark-mode" data-bs-toggle="tooltip" data-bs-placement="left" title="<%= t('topbar.theme_mode') %>">
              <i class="ri-moon-line font-22" id="theme-icon-toggle"></i>
            </div>
          </li>
          <li class="dropdown">
            <a class="nav-link dropdown-toggle arrow-none px-2 d-flex align-items-center" data-bs-toggle="dropdown" href="#"
               role="button" aria-haspopup="false" aria-expanded="false">
              <p class="mb-0 mx-2">
                <%= image_tag current_user.avatar.presence || 'default-avatar.png', alt: 'user-img', class: 'avatar-xs rounded-circle' %>
              </p>
              <span class="d-lg-flex flex-column gap-1 d-none">
                <h5 class="my-0"><%= current_user.name %></h5>
                <h6 class="my-0 fw-normal"><%= current_user.email %></h6>
              </span>
            </a>
            <div class="dropdown-menu dropdown-menu-end dropdown-menu-animated profile-dropdown">
              <a class="dropdown-item" href="<%= edit_user_path(current_user.id) %>">
                <i class="mdi mdi-account-circle me-1"></i>
                <span><%= t('topbar.profile') %></span>
              </a>
              <%= button_to destroy_user_session_path, method: :delete, class: "dropdown-item", form: { class: "d-inline" } do %>
                <i class="mdi mdi-logout me-1"></i>
                <span><%= t('topbar.logout') %></span>
              <% end %>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
